<div class="head-content container">
    <h1 class="display-1">Blog<h1>
</div>

<div class="head-sub container">
    <h1 class="display-5">Hay <%= Article.public_count %> publicaciones
    </h1>
</div>

<div class="container articles-content bg-transparent">
    <div class="list-unstyled list-picker container">
        <div class="row row-cols-auto justify-content-center g-2">
            <% @articles.each do |article| %>
                <% unless article.archived? %>
                    <div class="col">
                        <div class="btn btn-light border border-5 rounded">
                            <%= link_to article.title, article, :class => "btn fw-bold" %>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
<div class="row row-cols-auto justify-content-center">
    <div class="col align-self-center">
        <div class="btn btn-info border border-3 border-primary">
            <%= link_to "Nuevo", new_article_path, :class => "btn fst-italic fw-bold" %>
        </div>
    </div>
</div>

